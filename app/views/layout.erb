<% if @message %>
  <h3><%= @message %></h3>
<% end %>

<%= yield %>

<% if !logged_in? %>
  <br></br>
  <a href='/login'>Log In</a>
  <br></br>
  <a href='/signup'>Sign Up</a>
<% else %>
  <form action='/logout' method='get'>
    <input type='submit' value='Sign Out'>
  </form>
<% end %>
